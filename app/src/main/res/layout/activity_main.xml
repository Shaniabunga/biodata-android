<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_gravity="left"
                android:src="@drawable/ic_bookmark_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="BIODATA DIRI"
                android:textColor="#080908"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="30dp" />

            <RelativeLayout
                android:id="@+id/Containerr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">

                <TextView
                    android:id="@+id/textNim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:text="NIM       :"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#080908"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/rContainer"
                    android:layout_toRightOf="@+id/textNim"
                    tools:ignore="NotSibling" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">

                <TextView
                    android:id="@+id/textNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:text="Nama     : "
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#080908"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/rContainer"
                    android:layout_toRightOf="@+id/textNama"
                    tools:ignore="NotSibling" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rContainer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">

                <TextView
                    android:id="@+id/textAlamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:text="Alamat    : "
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#080908"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/rContainer4"
                    android:layout_toRightOf="@+id/textAlamat"
                    tools:ignore="NotSibling" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rContainer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Tempat, Tanggal lahir :"
                    android:layout_marginStart="20dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#080908"/>

                <EditText

                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/textDate"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Containerz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                >
                <Spinner
                    android:id="@+id/sTanggal"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:entries="@array/tanggal"
                    />

                <Spinner
                    android:id="@+id/sBulan"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/textDate"
                    android:layout_toRightOf="@+id/sTanggal"
                    android:entries="@array/bulan"
                    tools:ignore="NotSibling" />

                <Spinner
                    android:id="@+id/sTahun"
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/textDate"
                    android:layout_toRightOf="@+id/sBulan"
                    android:entries="@array/tahun"
                    tools:ignore="NotSibling" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rContainer5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">

                <TextView
                    android:id="@+id/textNo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="No. HP : "
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:textColor="#080908"/>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/rContainer5"
                    android:layout_toRightOf="@+id/textNo"
                    tools:ignore="NotSibling" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin : "
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textColor="#080908"/>

            <RadioGroup
                android:id="@+id/JK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laki-Laki"
                    android:textSize="18dp"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:textSize="18dp"/>
            </RadioGroup>

            <TextView
                android:id="@+id/textHobi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:text="Hobi          : "
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#080908"/>

            <RelativeLayout
                android:id="@+id/rContainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">

                <CheckBox
                    android:id="@+id/cdebian"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/textHobi"
                    android:text="Nginstal debian"
                    android:textSize="14dp"
                    tools:ignore="NotSibling" />

                <CheckBox
                    android:id="@+id/ckabel"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@+id/rContainer"
                    android:layout_toRightOf="@+id/cdebian"
                    android:text="Krimping kabel"
                    tools:ignore="NotSibling"
                    android:textSize="14dp"/>

                <CheckBox
                    android:id="@+id/ckoding"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@+id/rContainer"
                    android:layout_toRightOf="@+id/ckabel"
                    android:text="Ngoding"
                    tools:ignore="NotSibling"
                    android:textSize="14dp"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/textlulusan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:text="Pendidikan Terakhir      : "
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#080908"/>

            <RelativeLayout
                android:id="@+id/rContainer6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginStart="20dp">

                <Switch
                    android:id="@+id/sSD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="SD" />

                <Switch
                    android:id="@+id/sSMP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rContainer6"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/sSD"
                    android:text="SMP"
                    tools:ignore="NotSibling" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rContainer6"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/sSMP"
                    android:text="SMA"
                    tools:ignore="NotSibling" />

            </RelativeLayout>
        <Button
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="Kirim"
            android:textColor="#ededed"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="right"
            android:background="#512b58"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>